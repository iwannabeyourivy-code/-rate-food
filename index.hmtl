<!DOCTYPE html>
<html lang="th">
<head>
<meta charset="UTF-8">
<title>ให้คะแนนอาหาร & ลุ้นรางวัล</title>
<style>
body { font-family: Arial; text-align: center; padding: 20px; }
h1 { color: #333; }
input[type="text"], input[type="number"] { padding: 5px; font-size: 16px; width: 200px; margin:5px 0; }
.star { font-size: 40px; cursor: pointer; color: lightgray; }
.star.selected { color: gold; }
button { padding: 10px 20px; font-size: 16px; margin-top: 10px; }
</style>
</head>
<body>

<h1>ให้คะแนนอาหาร & ลุ้นรางวัล</h1>

<!-- ช่องกรอกชื่อเมนู -->
<input type="text" id="menuName" placeholder="กรอกชื่อเมนู"><br>

<!-- ช่องกรอกเลขสำหรับสุ่มรางวัล -->
<input type="number" id="raffleNumber" placeholder="ใส่เลขเพื่อสุ่มรางวัล"><br><br>

<!-- ดาวให้คะแนน -->
<div id="stars">
  <span class="star" data-value="1">&#9733;</span>
  <span class="star" data-value="2">&#9733;</span>
  <span class="star" data-value="3">&#9733;</span>
  <span class="star" data-value="4">&#9733;</span>
  <span class="star" data-value="5">&#9733;</span>
</div>

<br>
<button onclick="submitRating()">ส่งคะแนน</button>

<script>
let selectedRating = 0;
const stars = document.querySelectorAll('.star');
stars.forEach(star => {
  star.addEventListener('click', () => {
    selectedRating = star.dataset.value;
    stars.forEach(s => s.classList.remove('selected'));
    for(let i=0; i<selectedRating; i++) stars[i].classList.add('selected');
  });
});

function submitRating() {
  const menu = document.getElementById('menuName').value;
  const raffle = document.getElementById('raffleNumber').value;
  if(menu=='' || selectedRating==0 || raffle=='') {
    alert('กรุณากรอกชื่อเมนู, เลือกดาว และใส่เลขรางวัล');
    return;
  }
  alert(`คุณให้เมนู "${menu}" ${selectedRating} ดาว\nเลขรางวัล: ${raffle}`);
  
  // เคลียร์ค่าเพื่อกรอกครั้งถัดไป
  document.getElementById('menuName').value = '';
  document.getElementById('raffleNumber').value = '';
  stars.forEach(s => s.classList.remove('selected'));
  selectedRating = 0;
}
</script>

</body>
</html>